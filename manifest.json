{
	"manifest_version": 2,

	"name": "Foodie",
	"description": "Recipe finder based on your trolley",
	"version": "1.0",
	"content_scripts": [{
		"matches": ["http://groceries.asda.com/*"],
		"js":["jquery-2.1.3.min.js","arrive.min.js","main.js"]
	}
	],
	  "background": {
    "scripts": ["bg.js"]
  },
	"page_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
		"default_title": "Click here!"
		},
	"permissions": [
	"storage",  "declarativeContent","http://foodie/"
	]

}
